<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox styleClass="book_box" stylesheets="@../css/blue_theme.css" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <VBox prefHeight="255.0" prefWidth="188.0" styleClass="book_box">
         <children>
            <AnchorPane fx:id="imgBox" maxHeight="230.0" maxWidth="200.0" prefHeight="230.0" prefWidth="200.0" style="-fx-background-color: #c0c0c0;" VBox.vgrow="ALWAYS">
               <children>
                  <ImageView fx:id="bookIcon" fitHeight="230.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                     <image>
                        <Image url="@../../../../../../../../Pictures/CELEB/madonna-beyonce.jpg" />
                     </image>
                  </ImageView>
               </children>
            </AnchorPane>
            <HBox alignment="CENTER" prefHeight="41.0" prefWidth="210.0" style="-fx-background-color: #2ABFFF;">
               <children>
                  <Label fx:id="bookName" alignment="CENTER" prefHeight="17.0" prefWidth="189.0" stylesheets="@../css/blue_theme.css" text="Label" textAlignment="CENTER" HBox.hgrow="ALWAYS">
                     <font>
                        <Font name="System Bold" size="15.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
   <padding>
      <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
   </padding>
</VBox>
